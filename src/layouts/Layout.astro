---
interface Props {
	title: string;
}

const { title } = Astro.props;

// FONTS
import '@fontsource/manjari';
import '@fontsource/lemon';
import Navbar from '@components/Navbar.astro';

---

<!doctype html>
<html lang="es" data-theme="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Â¡Hola, soy Nehuen Cuenca y te doy la bienvenida a mi portfolio de desarrollador web donde describo mi formacion, proyectos, tecnologias y servicios que puedo ofrecer!" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<Navbar />
		</header>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--display-font: 'Lemon', Tahoma;
		--default-font: 'Manjari', sans-serif, Arial;
		--black: #000000;
		--white: #FFFFFF;

		--aqua-green-dark: #003C43;
		--aqua-green-dark-soft: #135D66;
		--aqua-green-mid-light: #77B0AA;
		--aqua-green-light: #E3FEF7;
	}

	[data-theme="light"] {
		--color-bg: var(--aqua-green-light);
		--color-font: var(--aqua-green-dark);
		--color-shadow: rgba(0,0,0, 0.4);
		--navbar-fade-bg: linear-gradient(180deg, var(--aqua-green-dark) 0%, var(--aqua-green-mid-light) 40%, var(--aqua-green-light) 100%);
		background-color: var(--color-bg);
		color: var(--color-font);
	}

	[data-theme="dark"] {
		--color-bg: var(--aqua-green-dark);
		--color-font: var(--aqua-green-light);
		--color-shadow: transparent;
		--navbar-fade-bg: linear-gradient(180deg, var(--aqua-green-light) 0%, var(--aqua-green-dark-soft) 40%, var(--aqua-green-dark) 100% );
		background-color: var(--color-bg);
		color: var(--color-font);
	}

	/* RESETS */
	*, *::before, *::after {
		box-sizing: border-box;
	}
	
	* {
		margin: 0;
	}

	body {
		line-height: 1.5;
		-webkit-font-smoothing: antialiased;
	}

	img, picture, video, canvas, svg {
		display: block;
		max-width: 100%;
	}

	p {
		overflow-wrap: break-word;
	}

	a { 
		color:inherit;
		text-decoration: none;
	}

	button{
		background-color: transparent;
		border: none;
		cursor: pointer;
	}
	
	ul,ol { 
		list-style-type: none;
		padding: 0
	}

	html {
		font-family: var(--default-font);
		width: 100%;
		scroll-behavior: smooth;
	}

	header {
		width: 100%;
		position: sticky;
		top: 0;
		z-index: 9;
	}

	section {
		scroll-margin-block-start: 120px; /*Adds margin to the top of the viewport*/
		scroll-margin-block-end: 120px; /*Adds margin to the bottom of the viewport*/
	}
</style>
