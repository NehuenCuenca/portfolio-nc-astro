---
import { Icon } from 'astro-icon/components';

---
<nav>
    <div class="nav-mobile">
        <a class="nav-link home-link" href="#hero-section">Inicio</a>
        <button class="nav-button">
            <Icon name="bx:menu" size={30}/>
        </button>
    </div>
    <div class="nav-desktop">
        <a class="nav-link home-link" href="#hero-section">Inicio</a>
        <ul class="nav-desktop__sections-links-list">
            <a class="nav-link" href="#formation-section">Formacion</a>
            <a class="nav-link" href="#projects-section">Proyectos</a>
            <a class="nav-link" href="#services-section">Servicios</a>
            <a class="nav-link" href="#contact-section">Contacto</a>
        </ul>
        <a class="nav-button">
            <Icon name="bx:moon" size={30}/>
        </a>
    </div>
</nav>

<style>
.nav-mobile, .nav-desktop{
    width: 100%;
    min-height: 15vh;
    padding: 0 1rem;
    background: rgb(0,60,67);
    background: var(--navbar-fade-bg);
    color: var(--color-titles);
    display: flex;
    align-items: center;
    justify-content: space-between;
}


.nav-desktop{
    display: none;
}

.nav-link{
    font: normal normal 500 1.3rem var(--display-font, Tahoma);
    text-decoration: none;
}

.home-link{
    font-size: 1.8rem;
}

.nav-button{
    color: var(--font-color);
}



@media (width >= 768px) {
    .nav-mobile {
        display: none;
    }
    .nav-desktop{
        display: flex;
        align-items: center;
        justify-content: flex-end;
        gap: 1rem;
    }

    .home-link{
        margin: 0 auto 0 0;
    }

    .nav-desktop__sections-links-list{
        display: flex;
        gap: 0 1rem;
    }
}

</style>
