<style>
    .hero-container{
        padding: 2rem 1rem;
        height: clamp(470px, 90vh, 90vh);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        animation: fadeFromCenter 2s ease 0s 1 normal forwards;
    }

    .texts-container{
        margin: auto 0;
    }

    .texts-container__title, 
    .texts-container__subtitle {
        text-align: center;
    }

    .texts-container__title{
        font: normal normal 800 clamp(2.5rem, 12vw, 5rem) var(--display-font, Tahoma);
        color: var(--color-titles);
        margin: 2rem 0 1rem 0;
    }

    .texts-container__subtitle{
        font: normal normal 150 clamp(1.7rem, 8vw, 3rem) var(--default-font, Arial);
        text-wrap: balance;
    }

    .divider{
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        color: var(--color-titles);
    }

    .divider__line{
        width: calc(((100% / 2) - 2rem) - 10vw);
        height: 2px;
        background-color: var(--color-titles);
    }

    .arrow-button__icon{
        width: clamp(40px, 10vw, 70px);
        height: clamp(40px, 10vh, 70px);
    }

    @keyframes fadeFromCenter {
        0% {
            opacity: 0;
        }

        100% {
            opacity: 1;
        }
    }
</style>